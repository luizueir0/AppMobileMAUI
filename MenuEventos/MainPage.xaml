<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuEventos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                x:Name="imgMain"
                Source="helper.png"
                HeightRequest="120"
                Aspect="AspectFit"
                Margin="0, 130, 0, -20"/>

            <Label
                x:Name="lblTitle"
                Text="Boas vindas ao seu conversor"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                FontSize="45"
                TextColor="#5798f2"/>

            <Label
                x:Name="lblTutorial"
                Text="Use o menu lateral ou superior para navegar entre as opções de conversão"
                HorizontalTextAlignment="Center"
                TranslationY="-25"
                FontSize="22"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
