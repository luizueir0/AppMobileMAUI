<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiasVividos.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            WidthRequest="350">
			
			<Label 
				x:Name="lblNome" 
				Text="Nome"/>
			
			<Entry 
				x:Name="etrNome"/>

			<Label 
				x:Name="lblIdadeAtual" 
				Text="Idade Atual"/>
			
			<Entry x:Name="etrIdadeAtual"/>

			<Button 
				x:Name="btnCalDiasVividos" 
				Text="Calcular Dias Vividos"
				BackgroundColor="#8f8f8f"/>
			
			<Button 
				x:Name="btnLimparCampos" 
				Text="Limpar Campos"
				BackgroundColor="#8f8f8f"/>
			
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
