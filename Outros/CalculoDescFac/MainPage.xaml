<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculoDescFac.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            WidthRequest="350">
			
			<Label
                x:Name="lblValorMensalidade"
                Text="Valor da mensalidade"/>

			<Entry
                x:Name="etrValorMensalidade"
                Placeholder="(Mensalidade em R$)"/>

			<Label
                x:Name="lblDiaPagamento"
                Text="Dia de pagamento"/>

			<Entry
                x:Name="etrDiaPagamento"/>

			<Button
                x:Name="btnCalculoDesconto"
                Text="Calcular Desconto"/>
			
			<Button
                x:Name="btnCalculoDesconto2"
                Text="Calcular Desconto"/>
			
			<Button
                x:Name="btnCalculoDesconto3"
                Text="Calcular Desconto"/>
			
			<Button
                x:Name="btnCalculoDesconto4"
                Text="Calcular Desconto"/>
			
			<Button
                x:Name="btnCalculoDesconto5"
                Text="Calcular Desconto"
                FontSize="Medium"
                HorizontalOptions="Fill"/>
				
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
