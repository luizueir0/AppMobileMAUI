<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiasVividosCalculo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            WidthRequest="350">

            <Label x:Name="lblIdade"
                   Text="Idade"/>

            <Entry x:Name="etrIdade"
                   Keyboard="Numeric"/>

            <Button x:Name="btnCacularDias"
                    Text="Calcular dias vividos"
                    Clicked="btnCalcularDiasOnClicked"/>

            <Button x:Name="btnLimpar"
                    Text="Limpar"
                    Clicked="btnLimparOnClicked"/>

            <Entry x:Name="etrDiasVividos"
                   IsEnabled="False"
                   HorizontalTextAlignment="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
